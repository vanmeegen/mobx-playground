{
  "compilerOptions": {
    "outDir": "bin/",
    "sourceMap": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2016"
    ]
  },
  "include": [
    "src/**/*",
    "stories/**/*",
    "test/**/*",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "test/galen/tests/galen-bootstrap/*",
    "test/galen/results/*"
  ]
}